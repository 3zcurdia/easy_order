<%= form_with(model: merchant, local: true) do |f| %>
  <% if merchant.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(merchant.errors.count, "error") %> prohibited this merchant from being saved:</h2>

      <ul>
        <% merchant.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <h1 class="title">Información de tu negocio</h1>

  <div class="field">
    <%= f.label :logo, 'Logo', class: 'label' %>
    <% if merchant.logo.attached? %>
    <p class="image is-128x128">
      <%= image_tag merchant.logo %>
    </p>
    <% end %>
    <div class="control">
      <%= f.file_field :logo %>
    </div>
  </div>


  <div class="field">
    <%= f.label :name, 'Nombre de tu negocio', class: 'label' %>
    <div class="control">
      <%= f.text_field :name, class: 'input', placeholder: 'ej. La cocina de mamá' %>
    </div>
  </div>

  <div class="field">
    <%= f.label :delivery, class: 'checkbox' do %>
      <%= f.check_box :delivery, class: 'checkbox' %>
      Entregas a domicilio
    <% end %>
  </div>

  <div class="field">
    <%= f.label :name, 'Tu telefono', class: 'label' %>
    <div class="control">
      <%= f.text_field :phone, class: 'input', placeholder: '55 6783 2673' %>
    </div>
  </div>

  <hr/>

  <h1 class="title">Search Engine Optimization</h1>
  <h2 class="subtitle">Ayuda a que Google te encuentre mas rapido</h2>
  <div class="field">
    <%= f.label :keyword_list, 'Palabras clave', class: 'label' %>
    <div class="control">
      <%= f.text_field :keyword_list, class: 'input', value: f.object.keyword_list.to_s, placeholder: 'e.j. economico, pizza, mexiana' %>
      <em class="help">(Separa las palabras clabe por comas)</em>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.submit 'Actualizar', class: 'button is-primary' %>
    </div>
  </div>
<% end %>
