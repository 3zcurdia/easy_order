<article class="media box">
  <figure class="media-left">
    <figure class="image is-pulled-right"><%= svg_code(page_url(merchant.slug)) %></figure>
  </figure>
  <div class="media-content">
    <h1 class="title"><%= merchant.name %></h1>
    <h2 class="subtitle is-7">
    <%= link_to page_path(merchant.slug) do %>
      <span class="icon"><i class="fa fa-link"></i></span>
      <%= page_url(merchant.slug) %>
    <% end %>
    </h2>
    <div class="content">
      <p>
        <%= link_to merchant_path(merchant) do %>
          <span class="icon"><i class="fa fa-edit"></i></span>
          Detalles
        <% end %><br/>
        <%= link_to '#' do %>
          <span class="icon"><i class="fa fa-print"></i></span> QR
        <% end %><br/>
      </p>
    </div>
  </div>
</article>