<div class="columns">
  <div class="column is-one-fifth-widescreen is-one-fourth-desktop is-one-third-tablet">
    <%= render @merchant, cached: true %>
  </div>
  <div class="column">
    <div class="level">
      <div class="level-left">
        <h1 class="title">Productos</h1>
      </div>
      <div class="level-right">
        <%= link_to new_merchant_menu_item_path(@merchant), class: 'button is-primary is-outlined' do %>
          <span>Agregar</span>
          <span class="icon is-small"><i class="fa fa-plus" aria-hidden="true"></i></span>
        <% end%>
      </div>
    </div>
    <div class="tabs">
      <ul>
        <% @merchant.menu.sections.each do |section| %>
          <li class="is-capitalized <%= 'is-active' if @section_filter == section.id %>"><%= link_to section.name, merchant_path(@merchant, section: section.id) %></li>
        <% end %>
      </ul>
    </div>
    <div data-controller="sortable" data-sortable-url-value="<%= sort_merchant_menu_items_path(@merchant)%>">
      <%= render @menu_items, merchant: @merchant %>
    </div>
  </div>
</div>
