<h1 class="title">Negocios</h1>

<div class="columns">
  <div class="column is-one-third">
    <% @merchants.each do |merchant| %>
      <article class="media">
        <figure class="media-left">
          <% if merchant.logo.attached? %>
          <figure class="image is-128x128">
            <%= image_tag merchant.logo.variant(resize_to_fit: [256, 256]) %>
          </figure>
          <% end %>
        </figure>
        <div class="media-content">
          <h1 class="title"><%= link_to merchant.name, merchant_path(merchant) %></h1>
          <div class="content">
            <% if merchant.demo? %>
            <span class="tag is-danger is-light">Demo</span>
            <% end %>
            <% if merchant.delivery %>
              <span class="icon"><i class="fas fa-truck"></i></span>
            <% end %>
            <% if merchant.phone.present? %>
              <span class="icon"><i class="fa fa-phone"></i></span>
            <% end %>
          </div>
        </div>
      </article>
    <% end %>
  </div>
</div>
