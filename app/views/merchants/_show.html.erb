<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li class="is-active"><%= link_to merchant.name, '#' %></li>
    <li><%= link_to 'Edita tu negocio', edit_merchant_path(merchant) %></li>
  </ul>
</nav>
<div class="columns">
  <div class="column">
    <%= render @merchant %>
  </div>
  <div class="column">
    <div class="level">
      <div class="level-left">
        <h1 class="title">Men√∫</h1>
      </div>
      <div class="level-right">
        <%= link_to new_merchant_menu_item_path(merchant), class: 'button is-success' do %>
        <span class="icon">
          <i class="fa fa-plus"></i>
        </span>
        <span> Agregar producto</span>
        <% end %>
      </div>
    </div>
    <ul data-controller="sortable" data-sortable-url="<%= sort_merchant_menu_items_path(merchant)%>">
      <%= render merchant.menu_items, merchant: merchant %>
    </ul>
  </div>
</div>
