<div class="columns">
  <div class="column is-one-fifth-widescreen is-one-fourth-desktop is-one-third-tablet">
    <%= render @merchant, cached: true %>
  </div>
  <div class="column">
    <div class="level">
      <div class="level-left">
        <h1 class="title">Orden #<%= @order.id %></h1>
      </div>
    </div>
    <div class="table-container">
      <table class="table is-striped is-fullwidth">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Cantidad</th>
            <th>Precio unitario</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <% @order.items.each do |item| %>
          <tr>
            <td><%= item.name %></td>
            <td class="has-text-center"><%= item.quantity %></td>
            <td class="has-text-center"><%= number_to_currency(item.menu_item.price) %></td>
            <td><%= number_to_currency(item.subtotal) %></td>
          </tr>
          <% end %>
        </tbody>
        <tfoot>
          <tr>
            <td></td>
            <td></td>
            <td class="subtitle has-text-right">Total</td>
            <td class="subtitle"><%= number_to_currency(@order.total) %></td>
          </tr>
        </tfoot>
      </table>
    </div>
  </div>
</div>
