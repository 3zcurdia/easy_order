<%= form_with(model: merchant, url: builder_merchant_path(merchant), class: 'columns') do |f| %>
  <%= f.hidden_field :user_id %>
  <div class="field column is-three-quarters">
    <div class="control has-icons-left has-icons-right" data-controller="merchant-name" data-merchant-name-url="<%= api_merchants_search_index_path %>" >
      <%= f.text_field :name, class: 'input is-medium', placeholder: "el nombre de tu negocio", data: { action: 'keyup->merchant-name#change', target: 'merchant-name.name'} %>
      <span class="icon is-small is-left">
        <i class="fas fa-briefcase fa-xs"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check fa-xs is-hidden" data-target="merchant-name.icon"></i>
      </span>
      <p class="help" data-target="merchant-name.helpText"></p>
    </div>
  </div>
  <div class="control column">
    <%= f.submit 'Continuar', class: 'button is-primary is-medium is-fullwidth' %>
  </div>
<% end %>
