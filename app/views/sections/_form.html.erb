<%= form_with(model: [merchant, section], local: true) do |f| %>
  <div class="columns">
    <% if section.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(section.errors.count, "error") %> prohibited this section from being saved:</h2>

        <ul>
          <% section.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <%= f.hidden_field :position %>

    <div class="column is-two-thirds">
      <div class="field">
        <%= f.label :name, 'Nombre', class: 'label' %>
        <div class="control">
          <%= f.text_field :name, class: 'input', placeholder: 'ej. Alimentos, Bebidas, Postres' %>
        </div>
      </div>

      <div class="field">
        <div class="control">
          <%= f.submit class: 'button is-primary' %>
        </div>
      </div>
    </div>
  </div>
<% end %>
