<header class="header">
  <div class="hero is-dark px-5" style="<%= header_style(merchant.theme) %>">
    <div class="hero-head">
      <nav class="navbar">
        <div class="container">
          <div class="navbar-brand">
            <span class="navbar-burger burger" data-target="navbarMenuSections">
              <span></span>
              <span></span>
              <span></span>
            </span>
          </div>
          <div id="navbarMenuSections" class="navbar-menu">
            <div class="navbar-end">
              <% cache merchant.menu do %>
                <% merchant.menu.sections.with_items.each do |section| %>
                  <a onclick="window.location.hash='#section<%= section.id %>';" class="navbar-item is-capitalized" data-turbolinks-eval=false>
                    <%= section.name %>
                  </a>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <div class="hero-body">
      <article class="media columns is-vcentered">
        <% if merchant.logo.attached? %>
        <div class="media-left">
          <figure class="image is-128x128">
            <%= image_tag merchant.logo.variant(resize_to_fit: [256, 256]), class: 'is-rounded' %>
          </figure>
        </div>
        <% end %>
        <div class="media-content">
          <h1 class="title" data-target="edit-merchant.merchanName">
            <%= merchant.name %>
          </h1>
        </div>
      </article>
    </div>
  </div>
</header>
