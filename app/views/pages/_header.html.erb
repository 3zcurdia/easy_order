<header class="header">
  <div class="hero is-dark px-5" style="<%= header_style(merchant.theme) %>" data-merchant-edit-target="header">
    <div class="hero-head">
      <nav class="navbar" role="navigation" aria-label="main navigation" data-controller="navbar">
        <div class="container">
          <div class="navbar-brand">
            <a role="button" class="navbar-burger" data-action="navbar#toggleMenu" aria-label="menu" aria-expanded="false">
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
              <span aria-hidden="true"></span>
            </a>
          </div>
          <div class="navbar-menu" data-navbar-target="menu" style="<%= header_style(merchant.theme) %>">
            <div class="navbar-end">
              <% cache merchant.menu do %>
                <% merchant.menu.sections.with_items.each do |section| %>
                  <a onclick="window.location.hash='#section<%= section.id %>';" class="navbar-item is-capitalized" data-turbo-eval=false>
                    <%= section.name %>
                  </a>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </nav>
    </div>
    <div class="hero-body">
      <article class="media columns is-vcentered">
        <% if merchant.logo_attached? %>
        <div class="media-left">
          <figure class="image is-128x128">
            <%= image_tag safe_variant(merchant.logo, resize_to_fit: [256, 256]), class: 'is-rounded' %>
          </figure>
        </div>
        <% end %>
        <div class="media-content">
          <h1 class="title" data-merchant-edit-target="name">
            <%= merchant.name %>
          </h1>
        </div>
      </article>
    </div>
  </div>
</header>
