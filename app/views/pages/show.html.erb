    document.addEventListener("turbolinks:load", function() {
      var user_id = Math.random; // TODO: fetch from server
      mixpanel.identify(user_id);
      mixpanel.track("Menu", {"merchant": "<%= @merchant.slug %>"});
    })
  </script>
  <% end %>
</footer>
